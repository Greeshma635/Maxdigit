namespace SaparateConsoleApp3
{
    class Program
    {
        static void Main(string[] args)
        {
            int num = 123;
            int sum = 0;
            while (num > 0)
            {
                int Digit = num % 10;
                sum = sum + Digit;
                num = num / 10;
            }
            Console.WriteLine(sum);
            
        }
    }    
}
